{
    "manifest_version": 3,
    "name": "Prime Time",
    "version": "1.1.0",
    "description": "Finds the prime factors of a highlighted number.",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "images/Prime_Time.png",
        "48": "images/Prime_Time.png",
        "128": "images/Prime_Time.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["browser-polyfill.min.js", "loader.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "content.js",
                "utils/popup.js",
                "utils/factor.js",
                "utils/menu.js",
                "utils/format.js",
                "images/copy.png"
            ],
            "matches": ["<all_urls>"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/Prime_Time.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "primetimefirefox@abominablepug.com",
            "strict_min_version": "109.0",
			"data_collection_permissions": {
				"required": ["none"]
			}
        }
    }
}
